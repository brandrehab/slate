{
    "name": "brandrehab/slate",
    "description": "Slate CMS.",
    "keywords": ["cms", "laravel", "lumen", "slate"]],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^7.3",
        "brandrehab/slate-core": "^0.0",
        "laravel/lumen-framework": "^7.0",
        "twig/twig": "^3.0"
    },
    "require-dev": {
        "fzaninotto/faker": "^1.9.1",
        "mockery/mockery": "^1.3.1",
        "phpunit/phpunit": "^8.5"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/",
            "Database\\": "database/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
